<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="88dp"
        android:layout_marginTop="48dp"
        android:hint="Enter your name"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/name_et"
        app:layout_constraintStart_toStartOf="@id/name_et"
        app:layout_constraintEnd_toEndOf="@id/name_et"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="Save"

        />


    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/save_btn"
        app:layout_constraintEnd_toEndOf="@id/save_btn"
        app:layout_constraintStart_toStartOf="@id/save_btn"
        android:textColor="#000"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/show_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/name_tv"
        app:layout_constraintStart_toStartOf="@id/name_tv"
        app:layout_constraintEnd_toEndOf="@id/name_tv"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="Show"
        />


</androidx.constraintlayout.widget.ConstraintLayout>